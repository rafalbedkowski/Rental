<Window
    x:Class="Rental.WPF.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="O programie"
    Height="200"
    Width="300"
    WindowStyle="ToolWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <StackPanel
        Margin="10"
        VerticalAlignment="Center">
        <TextBlock
            VerticalAlignment="Top"
            Width="198"
            TextAlignment="Center"><Run
                Text="Wypożyczalnia narzędzi" /><LineBreak /><Run /><LineBreak /><Run
                Text="Rafał Będkowski" /><LineBreak /><Run /><LineBreak />
        <Hyperlink
                NavigateUri="http://www.morezo.pl"
                RequestNavigate="Hyperlink_RequestNavigate">www.morezo.pl</Hyperlink>
        </TextBlock>
        <Button
            Content="Zamknij"
            HorizontalAlignment="Center"
            Width="75"
            Click="CloseBtn_Click"
            Margin="0,20,0,0" />

    </StackPanel>
</Window>
